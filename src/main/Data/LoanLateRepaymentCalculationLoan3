 Map<string, string> investmentRecordType = new Map<string, string>();

    for (RecordType key : [SELECT Id, Name FROM RecordType WHERE SobjectType = 'sfims__Investment__c']) {investmentRecordType.put(key.Name, key.ID);
    }

    Account[] accts = [SELECT Id FROM Account WHERE Name = 'First Test Account'];
    Loan_Product__c[] loanProduct = [SELECT Id FROM Loan_Product__c WHERE Name = 'AutomationTestLoanProduct(Fixed)'];

            date disburseDate = date.parse('10-07-2019');
    		date repaymentDate = date.parse('10-08-2019');

    List<Investment__c> investments = new List<Investment__c>();
    investments.add(new Investment__c(
        Name = 'LateRepaymentCalculationLoan3',
        Disbursement_Method__c = 'Full disbursement at start',
        Account__c = accts[0].Id,
        Loan_Product__c = loanProduct[0].Id,
        Amount__c = 50000,
        Disbursement_Date__c = disburseDate,
        First_Repayment_Date__c = repaymentDate,
         Day_Count_Convention__c = 'Actual/365',
        Grace_Period_Type__c = 'None',
        //Number_of_Grace_Periods__c = 1,
        Interest_Rate__c = 8,
        Number_of_Instalments__c = 60,
        Late_Repayment_Calculation_Method__c = 'Principal+Interest	',
        Late_Repayment_Interest_Rate__c = 5,
        Late_Repayment_Tolerance_Period__c = 5,
        Repayment_Frequency__c = 1,
        Repayment_Frequency_Unit__c = 'Months',
        Status__c = 'Inactive',
        Setup_Fee_Charging_Method__c = 'No Setup Fee',
        //Setup_Fee__c = 'Flat Amount',
        //Flat_Amount__c = 500,
        RecordTypeId = investmentRecordType.get('Loan')
    ));
    try {insert investments;
        system.debug('10. Insert Investments - Done');
	} catch (DmlException e) {system.debug('Error inserting investments');
	}