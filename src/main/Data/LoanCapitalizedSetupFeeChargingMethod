 Map<string, string> investmentRecordType = new Map<string, string>();

    for (RecordType key : [SELECT Id, Name FROM RecordType WHERE SobjectType = 'sfims__Investment__c']) {investmentRecordType.put(key.Name, key.ID);
    }

    Account[] accts = [SELECT Id FROM Account WHERE Name = 'First Test Account'];
    sfims__Loan_Product__c[] loanProduct = [SELECT Id FROM sfims__Loan_Product__c WHERE Name = 'AutomationTestLoanProduct(Fixed)'];

            date disburseDate = date.parse('01-10-2019');
    		date repaymentDate = date.parse('01-11-2019');

    List<sfims__Investment__c> investments = new List<sfims__Investment__c>();
    investments.add(new sfims__Investment__c(
        sfims__Name = 'CapitalizedSetupFeeChargingMethod',
        sfims__Disbursement_Method__c = 'Full disbursement at start',
        sfims__Status__c = 'Inactive',
        sfims__Account__c = accts[0].Id,
        sfims__Loan_Product__c = loanProduct[0].Id,
        sfims__Amount__c = 50000,
        sfims__Disbursement_Date__c = disburseDate,
        sfims__First_Repayment_Date__c = repaymentDate,
        sfims__Day_Count_Convention__c = 'Actual/365',
        sfims__Grace_Period_Type__c = 'None',
        //sfims__Number_of_Grace_Periods__c = 1,
        sfims__Interest_Rate__c = 7,
        sfims__Number_of_Instalments__c =24,
        sfims__Late_Repayment_Calculation_Method__c = 'No Penalty',
        //sfims__Late_Repayment_Interest_Rate__c = 5,
        //sfims__Late_Repayment_Tolerance_Period__c = 0,
        sfims__Repayment_Frequency__c = 1,
        sfims__ Repayment_Frequency_Unit__c = 'Months',
        sfims__Setup_Fee_Charging_Method__c = 'Capitalized',
        sfims__Setup_Fee__c = '% of Disbursement Amount',
        sfims__Percent_of_Disbursement_Amount__c = 5,
        //sfims__Flat_Amount__c = 2000,
        sfims__Setup_Fee_Cap__c = 1500,
        sfims__RecordTypeId = investmentRecordType.get('Loan')
    ));
    try {insert investments;
        system.debug('10. Insert Investments - Done');
	} catch (DmlException e) {system.debug('Error inserting investments');
	}